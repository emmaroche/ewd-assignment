                "movieId",
                "reviewerName",
                "reviewDate",
                "content",
                "rating"
            ],
            "type": "object"
        },
        "MovieReviewsQueryParams": {
            "additionalProperties": false,
            "properties": {
              "movieId": {
                "type": "string"
              },
              "reviewerName": {
                "type": "string"
            },
              "rating": {
                "type": "number"
